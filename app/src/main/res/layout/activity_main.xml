<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="30dp">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Calculator App"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500 x 120"
        android:fontFamily="@font/poppins"
        android:textSize="25sp"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60.000"
        android:fontFamily="@font/poppins_bold"
        android:textSize="40sp"
        android:layout_marginTop="125dp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_values"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>

    <android.widget.Button
        android:id="@+id/r7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle"
        android:text="7"
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@id/guide1"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.widget.Button
        android:id="@+id/r8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle"
        android:text="8"
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@id/guide2"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="@id/guide1"/>

    <android.widget.Button
        android:id="@+id/r9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle"
        android:text="9"
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@id/guide3"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="@id/guide2"/>

    <android.widget.Button
        android:id="@+id/r_plus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle"
        android:text="+"
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="@id/guide3"/>

    <android.widget.Button
        android:id="@+id/r4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rectangle"
        android:text="4"
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@id/guide1"
        app:layout_constraintTop_toBottomOf="@id/r7"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.widget.Button
        android:id="@+id/r5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rectangle"
        android:text="5"
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@id/guide2"
        app:layout_constraintTop_toBottomOf="@id/r8"
        app:layout_constraintStart_toStartOf="@id/guide1"/>

    <android.widget.Button
        android:id="@+id/r6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rectangle"
        android:text="6"
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@id/guide3"
        app:layout_constraintTop_toBottomOf="@id/r9"
        app:layout_constraintStart_toStartOf="@id/guide2"/>

    <android.widget.Button
        android:id="@+id/r_minus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rectangle"
        android:text="-"
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/r_plus"
        app:layout_constraintStart_toStartOf="@id/guide3"/>

    <android.widget.Button
        android:id="@+id/r1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rectangle"
        android:text="1"
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@id/guide1"
        app:layout_constraintTop_toBottomOf="@id/r4"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.widget.Button
        android:id="@+id/r2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rectangle"
        android:text="2"
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@id/guide2"
        app:layout_constraintTop_toBottomOf="@id/r5"
        app:layout_constraintStart_toStartOf="@id/guide1"/>

    <android.widget.Button
        android:id="@+id/r3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rectangle"
        android:text="3"
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@id/guide3"
        app:layout_constraintTop_toBottomOf="@id/r6"
        app:layout_constraintStart_toStartOf="@id/guide2"/>

    <android.widget.Button
        android:id="@+id/r_distribution"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rectangle"
        android:text="/"
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/r_minus"
        app:layout_constraintStart_toStartOf="@id/guide3"/>

    <android.widget.Button
        android:id="@+id/r0"
        android:layout_width="158dp"
        android:layout_height="70dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rectangle"
        android:text="0"
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@id/guide2"
        app:layout_constraintTop_toBottomOf="@id/r1"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.widget.Button
        android:id="@+id/r_multiplication"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rectangle"
        android:text="x"
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@id/guide3"
        app:layout_constraintTop_toBottomOf="@id/r3"
        app:layout_constraintStart_toStartOf="@id/guide2"/>

    <android.widget.Button
        android:id="@+id/r_samdeng"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/rectangle"
        android:text="="
        android:textSize="35sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/r_distribution"
        app:layout_constraintStart_toStartOf="@id/guide3"/>


</androidx.constraintlayout.widget.ConstraintLayout>